@require 'reset'
@require 'helpers'

html, body
  width 100%
  height 100%

#last-year
  background #000
  color #fff
  transform rotate(-6deg)
  -webkit-transform @transform
  -moz-transform @transform
  z-index 5
  position fixed
  left 20px
  bottom 120px
  text-transform uppercase
  text-decoration none
  display block
  padding 10px
  .text
    font-family Amatic SC, sans-serif
    text-decoration none
    font-size 38px
    line-height @line-height
  .hand
    font-size 48px
    font-weight bold
    position relative
    top 0.16em
    margin-right 10px

#event
  display block
  position fixed
  border none
  text-decoration none
  z-index 3
  bottom 40px
  right 40px
  // transform rotate(-6deg)
  // -webkit-transform @transform
  // -moz-transform @transform
  box-shadow 4px 10px 10px rgba(0,0,0,0.3)
  img
    display block

#tattoos
  background url("/img/tattoos.png")
  background-size contain
  background-position center center
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  z-index 2




video
  background black
  background-position center center
  position fixed
  top 0
  left 0
  min-width 100%
  min-height 100%
  width auto
  height auto
  z-index 0
