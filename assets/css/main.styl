@require 'reset'
@require 'helpers'

html, body
  width 100%
  height 100%

body
  font-family Amatic SC, sans-serif
  font-weight bold
  background #4ae7f3
  background -moz-linear-gradient(top,  #4ae7f3 0%, #ecd7ea 100%)
  background -webkit-gradient(linear, left top, left bottom, color-stop(0%,#4ae7f3), color-stop(100%,#ecd7ea))
  background -webkit-linear-gradient(top,  #4ae7f3 0%,#ecd7ea 100%)
  background -ms-linear-gradient(top,  #4ae7f3 0%,#ecd7ea 100%)
  background linear-gradient(to bottom,  #4ae7f3 0%,#ecd7ea 100%)
  background-attachment fixed

a
  color black

#header
  position relative
  a
    z-index 3000
    position fixed
    top 20px
    right 20px
    border-radius 100px
    display block
    background black
    color white
    font-size 28px
    text-align center
    padding 10px 20px
    text-transform uppercase
    text-decoration none
    -webkit-transform rotate(12deg)
    transform rotate(12deg)

  img
    display block
    width 100%
    margin 0 auto
    pointer-events none
  .splash
    display block
    width 100%
    height 1px
    padding-top 63%
    background-image url("../img/amfsplash.png")
    background-size cover
    @media only screen and (max-width: 767px)
      background-image url("../img/amfsplash-sml.png")
      padding-top 100%


#lineup

  margin 30px auto
  position relative
  text-align center
  font-size 32px
  @media only screen and (min-width: 768px)
    font-size 68px
  a
    margin 0.1em 0.2em
    text-decoration none
    position relative
    -webkit-transition -webkit-transform ease-in-out 0.3s
    transition transform ease-in-out 0.3s
  p a
    margin 0
  .bands
    .row
      overflow hidden
    @media only screen and (min-width: 768px)
      .row:nth-child(2)
        font-size 95%
      .row:nth-child(3)
        font-size 100%
      .row:nth-child(4)
        font-size 92%
      .row:nth-child(5)
        font-size 80%
      .row:nth-child(6)
        font-size 55%
      .row:nth-child(7)
        font-size 56%
      .row:nth-child(8)
        font-size 65%
      .row:nth-child(9)
        font-size 65%
  .other
    .row
      margin 20px
      h3
        font-size 80%
        text-transform uppercase
        font-weight normal
    @media only screen and (min-width: 768px)
      font-size 24px
      text-align center
      position relative
      &:after
        background-image url("../img/linev.svg")
        background-size contain
        background-repeat no-repeat
        background-position center center
        content ""
        width 5px
        height 120px
        position absolute
        display block
        left 0
        right 0
        top 0
        margin 0 auto
      .row
        margin 0
        width 25%
        display inline-block
        vertical-align top
        box-sizing border-box
        padding 1em
        &:nth-child(odd)
          text-align right
        &:nth-child(even)
          text-align left
  @media only screen and (min-width: 768px)
    &:after, &:before
      content ""
      width 120px
      height 120px
      background-size contain
      background-repeat no-repeat
      display block
      margin 20px auto
      position absolute
    &:before
      background-image url("../img/tj.svg")
      bottom 220px
      left 80px
    &:after
      background-image url("../img/ojala.svg")
      bottom 20px
      right 40px


@-webkit-keyframes bgone {
   from { background-position 320px 320px }
   to { background-position 0 0 }
}

@-webkit-keyframes bgtwo {
   from { background-position 0 0 }
   to { background-position 320px 640px }
}

@-webkit-keyframes rotate {
  from {
    -webkit-transform: rotate(0deg);
  }
  to {
    -webkit-transform: rotate(360deg);
  }
}

#detail-container
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  color #fff
  z-index 99

  #detail
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    z-index 100
    .close
      width 80px
      height 0
      padding-top @width
      overflow hidden
      background-image url("../img/close.svg")
      background-size contain
      background-repeat no-repeat
      overflow hidden
      display block
      position absolute
      top 40px
      left 40px
      z-index 666
      -webkit-transition transform ease-in-out 0.3s
      transition transform ease-in-out 0.3s
    h1
      font-size 72px
      text-align center
      line-height 2em
      position relative
      -webkit-transition all ease-in-out 0.3s
      transition all ease-in-out 0.3s
    .image
      background-size contain
      background-repeat no-repeat
      background-position center center
      position absolute
      top 120px
      left 120px
      right 120px
      bottom 120px
      -webkit-transform rotate(-2deg)
      transform rotate(-2deg)
      -webkit-transition all ease-in-out 0.3s
      transition all ease-in-out 0.3s
    .text
      font-size 32px
      max-width 40%
      margin 0 auto
      z-index 10
      position fixed
      bottom 40px
      left 0
      right 0
      -webkit-transform rotate(-4deg)
      transform rotate(-4deg)
      -webkit-transition all ease-in-out 0.3s
      transition all ease-in-out 0.3s

    .tabs a
      display block
      text-decoration none
      width 80px
      border-radius @width
      line-height @width
      background-color white
      text-align center
      font-size 28px
      margin-bottom 20px

    .controls
      top 0
      position absolute
      width 100%
      a
        color #fff
        text-decoration none
        font-size 38px
        top 0
        position absolute
        height 0
        display block
        -webkit-transition all ease-in-out 0.3s
        transition all ease-in-out 0.3s
        span
          position relative
          display block
          text-align center

    a.next
      right 20px
      text-align right
      span
        -webkit-transform rotate(-90deg)
        -webkit-transform-origin 100% 100%
        transform-origin 100% 100%
        transform rotate(-90deg)

    a.prev
      left 20px
      span
        -webkit-transform rotate(90deg)
        transform rotate(90deg)
        -webkit-transform-origin 0 100%
        transform-origin 0 100%

  .bg
    background url("../img/clouds.png")
    position fixed
    top 0
    left 0
    right 0
    bottom 0
    opacity 0.6
    pointer-events auto
    -webkit-transition opacity 0.6s ease-in-out
    -moz-transition opacity 0.6s ease-in-out
    transition opacity 0.6s ease-in-out
    -webkit-animation-name bgone
    -webkit-animation-duration 40s
    -webkit-animation-timing-function linear
    -webkit-animation-iteration-count infinite
    &:nth-child(odd)
      -webkit-animation-name bgtwo
      -webkit-animation-duration 16s

#detail-container.transition
  #detail
    h1
      opacity 0
      -webkit-transform scale(3)
      transform scale(3)
    .image
      -webkit-transform rotate(4deg) scale(0.5)
      transform rotate(4deg) scale(0.5)
      opacity 0
    a.next
      right -100px
    a.prev
      left -100px
    .text
      bottom -400px
      opacity 0

    .close
      -webkit-animation-name rotate
      -webkit-animation-duration 2s
      -webkit-animation-iteration-count infinite
      -webkit-animation-timing-function linear


#info
  @media only screen and (min-width: 768px)
    width 768px
  margin 0 auto
  text-align center

  .schedule
    img
      max-width 100%


  .places
    margin 40px 0
    .site
      margin 20px 0
      @media only screen and (min-width: 768px)
        width 50%
        display inline-block
      h4
        font-weight bold
        font-size 32px
    .festival-site
      width 100%
      position relative
      .gallery
        text-align center
        a img
          display inline-block
          margin 0
          width 50%
      @media only screen and (min-width: 768px)
        .gallery a img
          width 160px
          margin 20px
        &:after
          content ""
          width 480px
          height 8px
          background-image url("../img/lineh.svg")
          background-size 100% 100%
          background-repeat no-repeat
          display block
          margin 20px auto
        &:before
          content ""
          width 120px
          height 120px
          background-image url("../img/foot.svg")
          background-size contain
          background-repeat no-repeat
          display block
          margin 20px auto
          position absolute
          bottom 0px
          left -120px

  .tickets
    position relative
    margin 0 0 20px
    @media only screen and (min-width: 768px)
      &:after
        content ""
        width 120px
        height 120px
        background-image url("../img/tickets.svg")
        background-size contain
        background-repeat no-repeat
        display block
        margin 20px auto
        left 0
        right 0
        position absolute
        z-index -1

    a
      font-weight bold

  h1.when
    &:after
      content ""
      width 100%
      height 8px
      background-image url("../img/lineh.svg")
      background-size 100% 100%
      background-repeat no-repeat
      display block
      margin 20px auto

  h1
    font-size 48px
  h3
    font-size 32px
    font-weight bold
  p
    font-weight normal
    font-size 28px

  .info-box
    max-width 320px
    margin 20px
    display inline-block
    vertical-align top

    h2
      font-size 48px


#gettingthere
  margin 40px 0
  padding 40px 0
  background #fff
  img
    display block
    margin 40px auto

#with
  margin 40px auto
  max-width 768px
  text-align center
  h2
    font-size 32px

#congrats
  position absolute
  top 40px
  width 100%
  p
    font-size 48px
    color #fff
    background #000
    width 420px
    margin 80px auto
    padding 40px
    text-align center
    transform rotate(-6deg)
    -webkit-transform rotate(-6deg)
    a
      color #fff
      text-decoration none
  img
    display block
    max-width 100%
    margin 40px auto

footer
  box-sizing border-box
  padding 40px
  font-size 38px
  line-height 2.4em
  max-width 768px
  margin 0 auto
  a
    float left
    text-decoration none
  a:nth-child(even)
    float right
