extends index

block detail
  #detail
    a.close.grow-rotate(href="/") Close
    h1= detail.name
    .image(style="background-image: url(/media/#{detail.slug}.jpg)")
    .text
      p= detail.bio

    .controls
      a.prev(href="/" + prev.slug): span= prev.name
      a.next(href="/" + next.slug): span= next.name

append scripts
  script. $('#detail-container').show()